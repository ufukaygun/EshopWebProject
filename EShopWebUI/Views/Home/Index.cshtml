@model List<EShopWebUI.Models.ProductModel>
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            @* @Html.Action("CategoryList", "Category") *@

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <br /> <br />
                    <h2 class="title text-center">ÜRÜNLERİMİZ</h2>
                  @foreach (var item in Model)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">

                                        <img src="~/NiceAdmin/ProductImage/@item.Image" width="65" height="110" alt="" />
                                        <h2>@item.Price</h2>
                                        <p>@item.Name</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }  

                   @* @Html.PagedListPager(Model, sayfa => Url.Action("Index", new { sayfa }), PagedListRenderOptions.Classic) *@
 


                </div><!--features_items-->
               @*  @Html.Action("PopularProduct", "Product") *@

            </div>
        </div>
    </div>
</section>
