@model EShopWebUI.Models.ProductModel
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title"></div>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" id="id" />
                        <div class="form-group">
                            <label for="name">Ürün Adı Giriniz</label>
                            <input type="text" class="form-control" asp-for="Name" id="name">
                        </div>

                        <div class="form-group">
                            <label for="description">Açıklama Giriniz</label>
                            <input type="text" class="form-control" asp-for="Description" id="description">
                        </div>

                       <div class="form-group">
                            <label for="ImageFile">Resim</label>
                            <input type="file" class="form-control" asp-for="ImageFile" id="ImageFile">
                        </div> 

                        <div class="form-group">
                            <label for="price">Fiyat</label>
                            <input type="text" class="form-control" asp-for="Price" id="price">
                        </div>

                        <div class="form-group">
                            <label for="stok">Stok</label>
                            <input type="text" class="form-control" asp-for="Stock" id="stok">
                        </div>

                        <div class="form-group">
                            <label for="popular">Popüler</label>
                             @Html.EditorFor(x => x.Popular)
                            @Html.ValidationMessageFor(x => x.Popular, "", new { @style = "color:red" })
                        </div>

                        <div class="form-group">
                            <label for="onay">Onay</label>
                            @Html.EditorFor(x => x.IsApproved)
                            @Html.ValidationMessageFor(x => x.IsApproved, "", new { @style = "color:red"})
                        </div>

                        <div class="form-group">
                            <label>Kategori</label>
                            @* <label asp-for="CategoryId" class="control-label"></label>
                            <select asp-for="CategoryId" class="form-control" asp-items="@(ViewData["CategoryList"] as IEnumerable<SelectListItem>)">
                                <option value="">Lütfen Kategori Seçiniz</option>
                            </select> *@

                            @Html.DropDownListFor(model => model.Category.Name, (IEnumerable<SelectListItem>)ViewBag.CategoryId, "Lütfen Kategori Seçiniz", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })

                           @* @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })  *@
                            @* @Html.LabelFor(model => model.CategoryId, "Kategori")
                             @Html.DropDownListFor(model => model.CategoryId, (IEnumerable<SelectListItem>)ViewData["CategoryList"], "Select a Category", new { @class = "form-control" })  
                            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" }) *@
                        </div>

                    </div>
                    <div class="card-action">
                        <button type="submit" class="btn btn-primary">Ürünü Ekle</button>
                        <a href="/AdminProduct/Index" class="btn btn-primary">Ürün Listesi</a>
                    </div>
                </div>
            </form>
            
        </div>

    </div>
</div>
